= render partial: "header"
= render partial: "side_bar"
.main-article
  .form
    .form__box
      = form_for @article do |f|
        = f.text_field :title, class: 'form__box__title', placeholder: 'タイトルを入力してください', autocomplete: "off"
        = f.text_area :content, class: 'form__box__content' , placeholder: '本文を入力してください'
        .form__box__submit
          = f.submit '編集する', class: 'form__box__submit__btn'
      .form__box__delete
        = link_to article_article_path(@article.id), method: :delete do
          %p.form__box__delete__btn#delete-btn 削除する