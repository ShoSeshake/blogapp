!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Blog
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    - if user_signed_in? && controller.action_name != "index"
      -if (controller.controller_name == "users" && @user.color == "pink")|| (controller.action_name == "new" && current_user.color == "pink")|| (controller.controller_name == "articles" && controller.action_name != "new" && @article.user.color == "pink")
        .wrapper_pink
          = yield
      -elsif  (controller.controller_name == "users" && @user.color == "blue")|| (controller.action_name == "new" && current_user.color == "blue")||(controller.controller_name == "articles" && controller.action_name != "new" && @article.user.color == "blue")
        .wrapper_blue
          = yield
      -elsif (controller.controller_name == "users" && @user.color == "green")|| (controller.action_name == "new" && current_user.color == "green")||(controller.controller_name == "articles" && controller.action_name != "new" && @article.user.color == "green") 
        .wrapper_green
          = yield
      -elsif (controller.controller_name == "users" && @user.color == "dark")|| (controller.action_name == "new" && current_user.color == "dark")||(controller.controller_name == "articles" && controller.action_name != "new" && @article.user.color == "dark") 
        .wrapper_dark
          = yield
    - else
      .wrapper 
        = yield